<h1>{{title}}</h1>
<p>Welcome to {{title}}</p>
<div class="row">
{{#each games}}
<div class="card m-3" style="max-width: 540px;">
  <div class="row no-gutters">
    <div class="col-md-4">
      <img src="https://vignette.wikia.nocookie.net/sonic/images/d/d6/Sonic_Generations.jpg/revision/latest?cb=20191004103644" class="card-img" alt="...">
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h5 class="card-title">{{title}}</h5>
        <p class="card-text">{{publisher}}</p>
        <p class="card-text"><small class="text-muted">{{year}}</small></p>
        <p class="card-text">{{publisher}}</p>
      </div>
    </div>
  </div>
</div>
{{/each}}
</div>