<h1>{{title}}</h1>
<p>Welcome to {{title}}</p>
<div class="row">
  {{#games}}
  <div class="card m-3" style="max-width: 540px;">
    <div class="row no-gutters">
      <div class="col-md-4">
        <a href="/games/details/{{game_id}}"><img
            src="https://vignette.wikia.nocookie.net/sonic/images/d/d6/Sonic_Generations.jpg/revision/latest?cb=20191004103644"
            class="card-img" alt="..."> </a>
      </div>
      <div class="col-md-8">
        <div class="card-body">
          <h5 class="card-title">{{title}}</h5>
          <p class="card-text">{{publisher}}</p>
          <p class="card-text"><small class="text-muted">{{year}}</small></p>
          <p class="card-text">Price: {{price}} Credits</p>
          <div class="d-flex justify-content-between">
            {{#unless favorite}}
            <a name="add" id="add" class="btn btn-primary" href="/games/{{game_id}}/favorite/add?_method=POST"
              role="button">Add to
              favorites</a>
            {{/unless}}
            {{#if favorite}}
            <a name="add" id="add" class="btn btn-warning" href="/games/{{game_id}}/favorite/remove?_method=POST"
              role="button">Remove
              from favorites</a>
            {{/if}}
            {{#unless player_id}}
            {{#unless cartgameid}}
            <a name="buy" id="buy" class="btn btn-success" href="/games/cart/{{game_id}}?_method=POST" role="button">
              <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-cart-plus" fill="currentColor"
                xmlns="http://www.w3.org/2000/svg">
                <path fill-rule="evenodd"
                  d="M0 1.5A.5.5 0 0 1 .5 1H2a.5.5 0 0 1 .485.379L2.89 3H14.5a.5.5 0 0 1 .491.592l-1.5 8A.5.5 0 0 1 13 12H4a.5.5 0 0 1-.491-.408L2.01 3.607 1.61 2H.5a.5.5 0 0 1-.5-.5zM3.102 4l1.313 7h8.17l1.313-7H3.102zM5 12a2 2 0 1 0 0 4 2 2 0 0 0 0-4zm7 0a2 2 0 1 0 0 4 2 2 0 0 0 0-4zm-7 1a1 1 0 1 0 0 2 1 1 0 0 0 0-2zm7 0a1 1 0 1 0 0 2 1 1 0 0 0 0-2z" />
                <path fill-rule="evenodd"
                  d="M8.5 5a.5.5 0 0 1 .5.5V7h1.5a.5.5 0 0 1 0 1H9v1.5a.5.5 0 0 1-1 0V8H6.5a.5.5 0 0 1 0-1H8V5.5a.5.5 0 0 1 .5-.5z" />
              </svg>
            </a>
            {{else}}
            <a name="buy" id="buy" class="btn btn-danger" href="/games/cart/{{game_id}}?_method=DELETE" role="button">
              <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-cart-plus" fill="currentColor"
                xmlns="http://www.w3.org/2000/svg">
                <path fill-rule="evenodd"
                  d="M0 1.5A.5.5 0 0 1 .5 1H2a.5.5 0 0 1 .485.379L2.89 3H14.5a.5.5 0 0 1 .491.592l-1.5 8A.5.5 0 0 1 13 12H4a.5.5 0 0 1-.491-.408L2.01 3.607 1.61 2H.5a.5.5 0 0 1-.5-.5zM3.102 4l1.313 7h8.17l1.313-7H3.102zM5 12a2 2 0 1 0 0 4 2 2 0 0 0 0-4zm7 0a2 2 0 1 0 0 4 2 2 0 0 0 0-4zm-7 1a1 1 0 1 0 0 2 1 1 0 0 0 0-2zm7 0a1 1 0 1 0 0 2 1 1 0 0 0 0-2z" />
                <path fill-rule="evenodd"
                  d="M8.5 5a.5.5 0 0 1 .5.5V7h1.5a.5.5 0 0 1 0 1H9v1.5a.5.5 0 0 1-1 0V8H6.5a.5.5 0 0 1 0-1H8V5.5a.5.5 0 0 1 .5-.5z" />
              </svg>
            </a>
            {{/unless}}
            {{/unless}}
          </div>
        </div>
      </div>
    </div>
  </div>
  {{/games}}
</div>